APP_NAME="SPPG Nexus"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.your-domain.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# ------------------------------------------------------------------
# DATABASE (SUPABASE POSTGRES – PRODUCTION)
# ------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=aws-1-ap-northeast-1.pooler.supabase.com
DB_PORT=6543
DB_DATABASE=postgres
DB_USERNAME=postgres.your_project_ref
DB_PASSWORD=
DB_SSLMODE=require

# Recommended for production stability
DB_OPTIONS="--connect_timeout=10 --statement_timeout=60000"

# ------------------------------------------------------------------
# CACHE / QUEUE / SESSION (PRODUCTION)
# ------------------------------------------------------------------
BROADCAST_DRIVER=log

# Prefer Redis in production (recommended)
CACHE_DRIVER=redis

# File uploads/attachments are NOT in local disk
FILESYSTEM_DISK=s3

# Jobs should run asynchronously in prod
QUEUE_CONNECTION=database

# API-first: avoid file sessions
SESSION_DRIVER=array
SESSION_LIFETIME=120

# ------------------------------------------------------------------
# REDIS (RECOMMENDED FOR PROD)
# ------------------------------------------------------------------
REDIS_HOST=your-redis-host
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_TLS=true

# ------------------------------------------------------------------
# MAIL (PRODUCTION)
# ------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ------------------------------------------------------------------
# AWS (S3 for non-Supabase assets, logs, or backups)
# ------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=your-app-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# ------------------------------------------------------------------
# PUSHER (OPTIONAL)
# ------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=ap1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ------------------------------------------------------------------
# SUPABASE (AUTH + STORAGE)
# ------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWKS_URL=https://your-project.supabase.co/auth/v1/.well-known/jwks.json
SUPABASE_ISSUER=https://your-project.supabase.co/auth/v1
SUPABASE_AUDIENCE=authenticated

# NEVER commit real keys
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Private bucket for attachments
SUPABASE_STORAGE_PRIVATE_BUCKET=private

# ------------------------------------------------------------------
# ATTACHMENTS (STOCK ADJUSTMENTS)
# ------------------------------------------------------------------
ATTACHMENTS_MAX_BYTES=10485760
ATTACHMENTS_ALLOWED_MIME=application/pdf,image/png,image/jpeg

# ------------------------------------------------------------------
# SECURITY (HIGHLY RECOMMENDED)
# ------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=your-domain.com,api.your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# HSTS (behind your web server / load balancer)
# (Enable in Nginx/Cloudflare, not here)

# ------------------------------------------------------------------
# SCRIBE (API DOCS) – GENERATION ONLY
# ------------------------------------------------------------------
# Only set these temporarily when running:
#   php artisan scribe:generate
SCRIBE_AUTH_TOKEN=
SCRIBE_COMPANY_ID=
